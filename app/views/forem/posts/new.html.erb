<%= render :partial => 'forem/forums/head', :locals => { :forum => @topic.forum } %>

<h2><%= t("forem.post.new") %></h2>

<% if @reply_to_post %>
  <div id='posts'>
    <%= render 'reply_to_post', :post => @reply_to_post %>
  </div>
	<%= content_for :title do %>
	  Reply to <%= @topic.subject %>
	<% end %>
<% else %>
  <h3 class='topic_subject'>
    <%= @topic.subject %>
  </h3>
	<%= content_for :title do %>
	  New post
	<% end %>
<% end %>

<%= simple_form_for [forem, @topic, @post] do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <%= f.submit t("forem.post.buttons.reply") %>
<% end %>
